rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Svi korisnici mogu ƒçitati javne slike (npr. pozadine)
    match /backgrounds/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Ostali fajlovi
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
