rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users – smije čitati i pisati samo svoj profil
    match /users/{userId} {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }

    // Cafes – može uređivati samo kafić koji mu je dodijeljen
    match /cafes/{cafeId} {
      // Čitanje svima dopušteno
      allow read: if true;

      // Pisanje samo ako korisnik ima isti cafeId
      allow write: if request.auth != null
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.cafeId != null
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.cafeId == cafeId;
    }
  }
}
