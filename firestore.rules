rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Svi smiju čitati kafiće (customer view)
    match /cafes/{cafeId} {
      allow read: if true;

      // Samo vlasnik smije mijenjati svoj kafić
      allow write: if request.auth != null
                   && request.auth.uid == resource.data.ownerUid;
    }

    // Users collection - samo vlasnik može čitati svoj dokument
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
